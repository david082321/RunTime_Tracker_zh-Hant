# MongoDB 配置
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password

# 程式配置
PORT=3000
SECRET=your-secret-key-here
MONGODB_URI=mongodb://admin:password@mongodb:27017/deviceStats?authSource=admin

# AI API配置
# 支持OpenAI、Claude、或其他兼容的AI服务
AI_API_URL=https://api.openai.com/v1/chat/completions
AI_API_KEY=sk-your-api-key-here
AI_MODEL=gpt-4
AI_MAX_TOKENS=1000

# 总结发布API配置
# 将AI总结发送到的目标API地址
PUBLISH_API_URL=https://your-webhook-url.com/api/summaries
PUBLISH_API_KEY=your_publish_api_key

# 时区配置
# 东八区 = 8, 西五区 = -5
DEFAULT_TIMEZONE_OFFSET=8

# AI总结功能开关
# true = 启用定时任务, false = 禁用
AI_SUMMARY_ENABLED=true